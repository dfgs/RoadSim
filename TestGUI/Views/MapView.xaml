<UserControl x:Class="TestGUI.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TestGUI.Views"
			 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
 
	<ItemsControl ItemsSource="{Binding Tiles}">
		<ItemsControl.ItemContainerStyle>
			<Style>
				<Setter Property="views:TileGrid.X" Value="{Binding X}"/>
				<Setter Property="views:TileGrid.Y" Value="{Binding Y}"/>
			</Style>
		</ItemsControl.ItemContainerStyle>
		
		<ItemsControl.ItemsPanel>
			<ItemsPanelTemplate>
				<views:TileGrid TileHeight="32" TileWidth="32" Columns="{Binding Width}" Rows="{Binding Height}"/>
			</ItemsPanelTemplate>
		</ItemsControl.ItemsPanel>

		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<Image Stretch="None" Source="{Binding ImageSource}" />
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</UserControl>
